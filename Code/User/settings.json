{
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true,
        "suppressWelcomeNotice": true
    },
    "workbench.iconTheme": "vscode-icons",
    "guides.enabled": false,
    "window.zoomLevel": 0,
    "c-cpp-flylint.cppcheck.enable": false,
    "c-cpp-flylint.flexelint.enable": false,
    "c-cpp-flylint.standard": [
        "c11",
        "c++11"
    ],
    "c-cpp-flylint.clang.extraArgs": [
        "-Wno-format-y2k",
        // "-Wundeclared-identifier",
        "-Wundeclared-selector",
    ],
    "c-cpp-flylint.clang.warnings": [
        "no-c++98-compat",
        "no-c++98-compat-pedantic",
        "no-reserved-id-macro",
    ],
    "explorer.confirmDelete": false,
    "editor.renderWhitespace": "all",
    "editor.rulers": [
        80,
        100,
        120
    ],
    // For mac:
    // "gitlens.keymap": "alternate",
    "gitlens.historyExplorer.enabled": true,
    "workbench.colorTheme": "Oceanic Next (dimmed bg)",
    "gitlens.gitExplorer.files.layout": "tree",
    "editor.fontSize": 14,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "rainbow1",
                "settings": {
                    "foreground": "#E6194B"
                }
            },
            {
                "scope": "keyword.rainbow2",
                "settings": {
                    "foreground": "#3CB44B"
                }
            },
            {
                "scope": "entity.name.function.rainbow3",
                "settings": {
                    "foreground": "#FFE119"
                }
            },
            {
                "scope": "comment.rainbow4",
                "settings": {
                    "foreground": "#0082C8"
                }
            },
            {
                "scope": "string.rainbow5",
                "settings": {
                    "foreground": "#FABEBE"
                }
            },
            {
                "scope": "variable.parameter.rainbow6",
                "settings": {
                    "foreground": "#46F0F0"
                }
            },
            {
                "scope": "constant.numeric.rainbow7",
                "settings": {
                    "foreground": "#F032E6"
                }
            },
            {
                "scope": "entity.name.type.rainbow8",
                "settings": {
                    "foreground": "#008080"
                }
            },
            {
                "scope": "markup.bold.rainbow9",
                "settings": {
                    "foreground": "#F58231"
                }
            },
            {
                "scope": "invalid.rainbow10",
                "settings": {
                    "foreground": "#FFFFFF"
                }
            }
        ]
    },
    "search.showLineNumbers": true,
    "workbench.editor.highlightModifiedTabs": true,
    "files.trimTrailingWhitespace": true,
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
    "terminal.integrated.rendererType": "dom",
    "azureFunctions.showCoreToolsWarning": false,
}
