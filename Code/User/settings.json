{
    "breadcrumbs.enabled": true,
    "debug.console.fontFamily": "Fira Code",
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true,
        "suppressWelcomeNotice": true
    },
    "window.zoomLevel": 0,
    "explorer.confirmDelete": false,
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": true,
    "editor.rulers": [
        80,
        100,
        120
    ],
    "editor.suggestSelection": "first",
    // For mac:
    // "gitlens.keymap": "alternate",
    "workbench.colorTheme": "Dracula",
    "workbench.iconTheme": "vscode-icons",
    "editor.fontSize": 14,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "rainbow1",
                "settings": {
                    "foreground": "#E6194B"
                }
            },
            {
                "scope": "keyword.rainbow2",
                "settings": {
                    "foreground": "#3CB44B"
                }
            },
            {
                "scope": "entity.name.function.rainbow3",
                "settings": {
                    "foreground": "#FFE119"
                }
            },
            {
                "scope": "comment.rainbow4",
                "settings": {
                    "foreground": "#0082C8"
                }
            },
            {
                "scope": "string.rainbow5",
                "settings": {
                    "foreground": "#FABEBE"
                }
            },
            {
                "scope": "variable.parameter.rainbow6",
                "settings": {
                    "foreground": "#46F0F0"
                }
            },
            {
                "scope": "constant.numeric.rainbow7",
                "settings": {
                    "foreground": "#F032E6"
                }
            },
            {
                "scope": "entity.name.type.rainbow8",
                "settings": {
                    "foreground": "#008080"
                }
            },
            {
                "scope": "markup.bold.rainbow9",
                "settings": {
                    "foreground": "#F58231"
                }
            },
            {
                "scope": "invalid.rainbow10",
                "settings": {
                    "foreground": "#FFFFFF"
                }
            }
        ]
    },
    "search.showLineNumbers": true,
    "workbench.editor.highlightModifiedTabs": true,
    "files.trimTrailingWhitespace": true,
    "powershell.powerShellExePath": "C:\\Program Files\\PowerShell\\6\\pwsh.exe",
    "terminal.integrated.shell.windows": "C:\\Program Files\\PowerShell\\6\\pwsh.exe",
    "terminal.integrated.rendererType": "dom",
    "azureFunctions.showCoreToolsWarning": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "csharp.suppressDotnetRestoreNotification": true,
    "omnisharp.projectLoadTimeout": 120,
    "cSpell.enabledLanguageIds": [
        "asciidoc",
        "c",
        "cpp",
        "csharp",
        "css",
        "go",
        "handlebars",
        "html",
        "jade",
        "javascript",
        "javascriptreact",
        "json",
        "latex",
        "less",
        "markdown",
        "php",
        "plaintext",
        "powershell",
        "pub",
        "python",
        "restructuredtext",
        "scss",
        "text",
        "typescript",
        "typescriptreact",
        "yml"
    ],
    "cSpell.userWords": [
        "changeset",
        "cmdlet",
        "demuxers",
        "embeddable",
        "exif",
        "ffprobe",
        "parallelize",
        "recurse",
        "uploader",
        "vcos",
        "vizrt",
        "xunit"
    ]
}
